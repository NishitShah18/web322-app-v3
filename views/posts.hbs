<div class="row">
  <div class="col-md-12">
    <h2>Posts</h2>
    <hr />
    <div class="table-responsive">
      <table
        class="table"
        style="background-color:rgb(202, 202, 202); color:black"
      >
        <thead>
          <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Published</th>

          </tr>
        </thead>
        <tbody>
          {{#each info}}
            <tr>
              <td>{{id}}</td>
              <td>{{title}}</td>
              <td>{{postDate}}</td>
              <td><a href="/posts?category={{category}}">{{category}}</a></td>
              <td>{{published}}</td>

            </tr>
          {{else}}
            <tr>
              <td colspan="8"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless posts}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>