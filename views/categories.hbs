<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <hr />
    <div class="table-responsive">
      <table
        class="table"
        style="background-color:rgb(202, 202, 202); color:black"
      >
        <thead>
          <tr>
            <th>Column ID</th>
            <th>Category Name</th>

          </tr>
        </thead>
        <tbody>
          {{#each info}}
            <tr>
              <td><a href="/posts?category={{id}}">{{id}}</a></td>
              <td><a href="/posts?category={{id}}">{{category}}</a></td>
            </tr>
          {{else}}
            <tr>
              <td colspan="8"></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
  {{#unless posts}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>